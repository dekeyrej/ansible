#cloud-config
hostname: {{ item }}
manage_etc_hosts: true
users:
  - default
  - name: ubuntu
    groups: [adm, cdrom, dip, lxd, sudo]
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: true
    ssh_authorized_keys: 
{% for key in sshkey %}
      - ssh-rsa {{ key }}
{% endfor %}
