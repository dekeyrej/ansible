#cloud-config
hostname: {{ item }}
manage_etc_hosts: true
users:
  - default
  - name: {{ user }}
    groups: [adm, cdrom, dip, lxd, sudo]
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: true
    ssh_authorized_keys:
{% for key in sshkey %}
      - {{ key }}
{% endfor %}
package_update: true
package_upgrade: true
packages:
  - openssh-server
